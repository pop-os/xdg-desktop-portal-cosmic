#!/usr/bin/make -f

DESTDIR = debian/xdg-desktop-portal-cosmic
CLEAN ?= 1
VENDOR ?= 1

%:
	dh $@

override_dh_auto_clean:
	if test "${CLEAN}" = "1"; then \
		cargo clean; \
	fi

	if ! ischroot && test "${VENDOR}" = "1"; then \
		just vendor; \
	fi

override_dh_auto_build:
	just build-vendored

override_dh_auto_install:
	just rootdir=$(DESTDIR) install
